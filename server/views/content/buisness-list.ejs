<div class="row justify-content-md-center">
  <div class="col">
    <div>
      <div>
        <h1 class="display-4" style="text-align: center" >Contact Me</h1>
        <hr class="my-4">
      </div>
            <% if(typeof displayName == 'string' && displayName) { %>
            <a href="/buisness-list/add" class="btn btn-primary btn-lg"><i class="fas fa-plus-circle"></i> Add New Contact</a>
            <% } %>
            <table class="table table-striped table-bordered table-hover">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Name</th>
                  <th scope="col">Number</th>
                  <th scope="col">Email Address</th>
                  <% if(typeof displayName == 'string' && displayName) { %>               
                  <th></th>
                  <th></th>
                  <% } %>
                </tr>
              </thead>
              <tbody>

                <% for(let count=0; count < buisnessess.length; count++) { %>

                <tr>
                  <td><%= buisnessess[count].name %></td>
                  <td><%= buisnessess[count].number %></td>
                  <td><%= buisnessess[count].email %></td>
                  
                  <td>
                    <a href="/buisness-list/edit/<%= buisnessess[count]._id %>" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit"></i> Update</a>
                  </td>
                  <td>
                      <a href="/buisness-list/delete/<%= buisnessess[count]._id %>" class="btn btn-danger btn-sm">
                          <i class="fas fa-trash-alt"></i> Delete</a>
                  </td>

                </tr>
                
              <% } %>

              </tbody>
            </table>

    </div>
  </div>

<link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
